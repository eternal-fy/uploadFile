<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ld.dao.UserDao">

    <insert id="insertUser" parameterType="User"  >
		insert into user (id,age,name,username,password)
		values(#{id},#{age},#{name},#{username},#{password})
	</insert>

    <update id="modifyUser" parameterType="User" >
		update user
		set age = #{age}
		where name = #{name}
	</update>

    <delete id="deleteUser" parameterType="int" >
		delete from user
		where id = #{id}
	</delete>

    <select id="queryUser" parameterType="int" resultType="User">
		select *
		from user
		where id = #{id}
	</select>

    <select id="queryAll" resultType="User">
		select *
		from user
	</select>
	<select id="queryFont" resultType="User">
		select *
		from user limit #{param1},#{param2}
	</select>
	<select id="getPassword" parameterType="String" resultType="String">
		select password
		from user
		where username=#{username}
	</select>
</mapper>
